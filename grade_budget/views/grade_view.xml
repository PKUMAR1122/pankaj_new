<?xml version="1.0" encoding="UTF-8" ?>

<!-- views/grade_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_grade_tree" model="ir.ui.view">
        <field name="name">grade.tree</field>
        <field name="model">grade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
<!--                 <field name="approve_count"/> -->
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">grade.form</field>
        <field name="model">grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            
                        </group>
                        <group>
                        	<field name="name_arabic" required="1"/>
<!--                             <field name="approve_count" required="1"/> -->
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_grade_record" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">grade</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and manage grades.
            </p>
        </field>
    </record>
</odoo>
