<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employee_contract_tree_view" model="ir.ui.view">
        <field name="name">employee.contract.tree.view</field>
        <field name="model">employee.contract</field>
        <field name="arch" type="xml">
            <tree string="Contract">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="position_id"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>


    <record id="employee_contract_form_view" model="ir.ui.view">
        <field name="name">employee.contract.form.view</field>
        <field name="model">employee.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" required="1"/>
                            <field name="department_id" required="1"/>
                            <field name="grade_details_id" required="1"/>
                            <field name="category_id" required="1" domain="[('status', '=', 'confirm')]"/>
                            <field name="grade_job_id" domain="[('category_id', '=', category_id),('status', '=', 'confirm')]"
                            	attrs="{'required':[('is_unified','!=', True)]}"/>
                            <field name="contract_start_date"/>
                            <field name="contract_end_date"/>
                        </group>
                        <group>
                            <field name="position_id" />
                            <field name="budget_id" required="1"/>
                            <field name="project_id" required="1"/>
                            <field name="activity_id" required="1" domain="[('project_id', '=', project_id),('parent_id', '=', False)]"/>
                            <field name="sub_activity_id" domain="[('project_id', '=', project_id), ('parent_id', '=', activity_id)]"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="is_unified" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="employee_cont_line_ids">
                                <tree editable="bottom">
                                    <field name="pay_component_id" string="Budget Account Component" domain="[('status', '=', 'active')]"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group colspan="4">
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_amount" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_employee_contract_record" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="res_model">employee.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="grade_budget.employee_contract_tree_view"/>
    </record>

    <menuitem name="Contract"
              id="menus_employee_contract"
              parent="hr.menu_hr_root"
              action="action_employee_contract_record"
              sequence="5"/>
</odoo>