<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="final_grade_budget_view_form">
        <field name="name">final.grade.budget.view.form</field>
        <field name="model">final.grade.budget</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <header>
                    <button string="Submit" name="action_budget_submit" states="draft" type="object"
                            class="oe_highlight"/>

                    <button string="Approve" name="action_budget_vpss_approval" states="vpss_approval" type="object"
                            class="oe_highlight"/>

<!--                    <button string="Reject" name="action_vpss_reject" states="vpss_approval" type="object"-->
<!--                            class="oe_highlight" />-->

                    <button string="Approve" name="action_budget_president_approval" states="president_approval"
                            type="object" class="oe_highlight"/>

<!--                    <button string="Reject" name="action_president_reject" states="president_approval"-->
<!--                            type="object" class="oe_highlight" />-->

                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object"
                          />

                    <button string="Cancel" name="action_budget_cancel"
                            type="object" attrs="{'invisible' : ['|', ('id', '=', False), ('state', '!=', 'draft')]}"
                            confirm="Are you sure you want to cancel this record?"/>


                    <!--                    <button name="load_lines" string="Load Estimations" type="object" class="oe_highlight" states="draft"/>-->

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,vpss_approval,president_approval,done"/>

                </header>
                <field name="company_id" invisible="1"/>
                <sheet string="Budget">
                    <div class="oe_title">
                        <h1>
                            <field name="name"
                                   attrs="{'invisible':[('name', '=', 'New')], 'readonly': [('state', '!=', 'draft')]}"
                                   placeholder="Draft"/>

                            <span attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('name', '!=', 'New')]}">
                                Draft
                            </span>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" attrs="{'readonly':[('state','!=','draft')]}"
                                   domain="[('share', '=', False)]"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="fy_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <div name="date_edit_only" class="o_row oe_edit_only">
                                    <field name="date_from" class='oe_inline' readonly="1" force_save="1" required="1"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_to" class='oe_inline' readonly="1" force_save="1" required="1"/>
                                </div>
                                <div name="date_read_only" class="o_row oe_read_only">
                                    <span attrs="{'invisible': [('date_from', '=', False)]}">From
                                        <field name="date_from" class='oe_inline'/>
                                    </span>
                                    <span attrs="{'invisible': [('date_to', '=', False)]}">To
                                        <field name="date_to" class='oe_inline'/>
                                    </span>
                                </div>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines" name="budget_lines">
                            <field name="final_grade_budget_line" readonly="1"
                                   context="{'default_date_from': date_from,'default_date_to': date_to}" colspan="4"
                                   nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Budget Lines" editable="bottom">
                                    <field name="general_budget_id"
                                           domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                    <!--                                    <field name="analytic_account_id" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" groups="analytic.group_analytic_accounting"/>-->
                                    <field name="account_id"
                                           domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                    <field name="date_from" readonly="1" force_save="1"/>
                                    <field name="date_to" readonly="1" force_save="1"/>
                                    <field name="project_id"/>
                                    <field name="activity_id"
                                           domain="[('project_id', '=', project_id),('parent_id', '=', False)]"/>
                                    <field name="sub_activity_id"
                                           domain="[('project_id', '=', project_id), ('parent_id', '=', activity_id)]"/>
                                    <field name="remarks"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="final_grade_budget_state" invisible="1"/>
                                    <field name="planned_amount"/>
                                    <button type="object" name="action_open_dept_dist" string="Distribution..." icon="fa-arrow-circle-o-right"/>

                                </tree>
                                <form string="Budget Lines">
                                    <group>
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="general_budget_id"/>
                                            <!--                                            <field name="total_planned_amount" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>-->
                                            <field name="planned_amount"/>
                                            <!--                                                    <field name="analytic_account_id"-->
                                            <!--                                                           domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False)]"-->
                                            <!--                                                           groups="analytic.group_analytic_accounting"/>-->
                                            <field name="account_id"
                                                   domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False)]"/>
                                            <field name="project_id"/>
                                            <field name="sub_activity_id"/>
                                        </group>
                                        <group>
                                            <label for="date_from" string="Period"/>
                                            <div>
                                                <field name="date_from" class="oe_inline"/>
                                                -
                                                <field name="date_to" class="oe_inline"/>
                                            </div>
                                            <!--                                            <field name="paid_date" groups="base.group_no_one"/>-->
                                            <field name="company_id" options="{'no_create': True}"
                                                   groups="base.group_multi_company"/>
                                            <field name="activity_id"/>
                                            <field name="remarks"/>
                                            <field name="final_grade_budget_state" invisible="1"/>
                                        </group>
                                    </group>
                                    <group>
                                    	<field name="department_grade_distribution_lines" readonly="1" invisible="1"/>
                                    </group>

                                </form>
                            </field>
                        </page>
                        <page string="Account Base Budget" name="account_base_grade_lines">
                            <field name="account_base_grade_lines" colspan="4" readonly="1">
                                <tree string="Account Base Budget" editable="bottom">
	                                <field name="account_id"/>
	                                <field name="amount"/>
	                                <field name="currency_id" invisible="1"/>
	                                <button type="object" name="action_open_dept_dist" string="Distribution..." icon="fa-arrow-circle-o-right"/>
                                </tree>
                                <form string="Account Base Budget">
									<group>
										<field name="account_id"/>
	                                	<field name="amount"/>
	                                	<field name="currency_id" invisible="1"/>
									</group>
									<group>
                                    	<field name="department_grade_distribution_lines" readonly="1" invisible="1"/>
                                    </group>
								</form>
                            </field>
                        </page>
                         <page string="Performance Base Budget" name="performance_base_grade_lines">
                            <field name="performance_grade_lines" colspan="4" readonly="1">
                                <tree string="Performance Base Budget" editable="bottom">
	                                <field name="project_id"/>
	                                <field name="amount"/>
	                                <field name="currency_id" invisible="1"/>
	                                <button type="object" name="action_open_dept_dist" string="Distribution..." icon="fa-arrow-circle-o-right"/>
                                </tree>
                                <form string="Performance Base Budget">
									<group>
										<field name="project_id"/>
	                                	<field name="amount"/>
	                                	<field name="currency_id" invisible="1"/>
									</group>
									<group>
                                    	<field name="department_grade_distribution_lines" readonly="1" invisible="1"/>
                                    </group>
								</form>
                            </field>
                        </page>
                        <page string="VPSS Reject Reason" name="vpss_grade_reject_reason_lines">
                            <field name="vpss_grade_reject_reason_lines" readonly="1">
                                <tree string="VPSS Reject Reason Lines" editable="bottom">
                                    <field name="reject_date"/>
                                    <field name="reason"/>
                                    <field name="rejected_by"/>
                                </tree>
                                 <form string="VPSS Reject Reason">
                                     <group>
                                        <field name="reject_date"/>
                                        <field name="reason"/>
                                        <field name="rejected_by"/>
                                     </group>
                                </form>
                            </field>
                        </page>
                         <page string="President Reject Reason" name="president_grade_reject_reason_lines">
                            <field name="president_grade_reject_reason_lines" readonly="1">
                                <tree string="President Reject Reason Lines" editable="bottom">
                                    <field name="reject_date"/>
                                    <field name="reason"/>
                                    <field name="rejected_by"/>
                                </tree>
                                <form string="President Reject Reason">
                                    <group>
                                        <field name="reject_date"/>
                                        <field name="reason"/>
                                        <field name="rejected_by"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group colspan="4">
                        <group class="oe_subtotal_footer oe_right">
							<field name="total_planned_amount" class="oe_subtotal_footer_separator"
                        	widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
<!--                    <group colspan="4">-->
<!--						<group class="oe_subtotal_footer oe_left">-->
<!--	                        <field name="total_planned_amount_words" class="oe_subtotal_footer_separator"/>-->
<!--                    	</group>-->
<!--                    </group>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dept_distibution_tree">
        <field name="name">department.distribution.lines.view.tree</field>
        <field name="model">department.grade.distribution.lines</field>
        <field name="arch" type="xml">
            <tree string="Distribution" delete="0" create="0">
                 <field name="department_id" readonly="1"/>
                <field name="planned_amount" readonly="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dept_distibution_action">
        <field name="name">Department Distribution</field>
        <field name="res_model">department.grade.distribution.lines</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dept_distibution_tree"/>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="final_grade_budget_view_tree">
        <field name="name">final.grade.budget.view.tree</field>
        <field name="model">final.grade.budget</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')" string="Budget">
                <field name="name" colspan="1"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="user_id"/>
                <field name="state"/>
                <!--                <field name="activity_exception_decoration" widget="activity_exception"/>-->
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_final_grade_budget_view">
        <field name="name">Grade Budget</field>
        <field name="res_model">final.grade.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="final_grade_budget_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new grade budget.
            </p>
            <p>
                Use budgets to compare actual with expected revenues and costs
            </p>
        </field>
    </record>
</odoo>