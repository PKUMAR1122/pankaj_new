<?xml version="1.0" encoding="UTF-8" ?>
<!-- views/pay_component_views.xml -->
<odoo>
    <!-- Form View -->
    <record id="view_pay_component_form" model="ir.ui.view">
        <field name="name">pay.component.form</field>
        <field name="model">pay.component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="name_arabic" required="1"/>
                        </group>
                        <group>
                            <field name="account_id" required="1" domain="[('salary_account', '=', True)]"/>
                            <field name="status" widget="radio" required="1"/>
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_pay_component_tree" model="ir.ui.view">
        <field name="name">pay.component.tree</field>
        <field name="model">pay.component</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="account_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pay_component" model="ir.actions.act_window">
        <field name="name">Budget Account Components</field>
        <field name="res_model">pay.component</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and manage pay components.
            </p>
        </field>
    </record>

</odoo>
