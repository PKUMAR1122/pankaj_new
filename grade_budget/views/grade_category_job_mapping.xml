<?xml version="1.0" encoding="UTF-8" ?>

<!-- views/grade_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_grade_category_job_mapping_tree" model="ir.ui.view">
        <field name="name">grade.category.job.mapping.tree</field>
        <field name="model">grade.category.job.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="grade"/>
                <field name="category"/>
                <field name="job_id"/>
                <field name="approve_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_grade_category_job_mapping_form" model="ir.ui.view">
        <field name="name">grade.category.job.mapping.form</field>
        <field name="model">grade.category.job.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="grade" required="1"/>
                            <field name="category" required="1" domain="[('status', '=', 'confirm')]"/>
                            <field name="job_id" domain="[('category_id', '=', category),('status', '=', 'confirm')]" 
                            	attrs="{'required':[('is_unified','!=', True)]}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="is_unified" invisible="1"/>
                        </group>
                        <group>
                        	<field name="budget_id" required="1"/>
                        	<field name="approve_count" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Grade Category Lines">
                            <field name="grade_category_lines">
                                <tree editable="bottom">
                                    <field name="pay_component_id" required="1" string="Budget Account Component" domain="[('status', '=', 'active')]"/>
                                    <field name="amount" required="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="pay_component_id"/>
                                        <field name="amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group colspan="4">
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_amount" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_grade_category_job_record" model="ir.actions.act_window">
        <field name="name">Grade Category Job Mapping</field>
        <field name="res_model">grade.category.job.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and manage grade category job mapping .
            </p>
        </field>
    </record>
</odoo>
