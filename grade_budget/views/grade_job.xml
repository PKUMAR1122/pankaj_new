<?xml version="1.0" encoding="UTF-8" ?>

<!-- views/grade_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_grade_job_tree" model="ir.ui.view">
        <field name="name">grade.job.tree</field>
        <field name="model">grade.job</field>
        <field name="arch" type="xml">
            <tree>
                <field name="job_name"/>
                <field name="name_arabic"/>
                <field name="category_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_grade_job_form" model="ir.ui.view">
        <field name="name">grade.job.form</field>
        <field name="model">grade.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="job_name" required="1"/>
                            <field name="name_arabic" required="1"/>
                        </group>
                        <group>
                            <field name="category_id" required="1" domain="[('status', '=', 'confirm')]"/>
                            <field name="status" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_grade_job_record" model="ir.actions.act_window">
        <field name="name">Grade Job</field>
        <field name="res_model">grade.job</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and manage grade job.
            </p>
        </field>
    </record>
</odoo>
